Package: pbkdf2
Title: PKCS #5: Password-Based Key Derivation Function
Version: 0.1.0
Authors@R: c(
    person("Sigfredo Ismael", "Nin Colón",
           email = "signin@email.com",
           role = c("aut", "cph"),
           comment = "Original author of the codebase (MIT license, 2022)"),
    person("Bruno", "Gonçalves",
